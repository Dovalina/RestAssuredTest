package petStoreApi;

import io.restassured.RestAssured;
import io.restassured.http.ContentType;
import io.restassured.response.Response;

import static io.restassured.RestAssured.given;

import org.testng.annotations.Test;

import static org.hamcrest.Matchers.equalTo;




public class PetStoreApiTest extends TestConfig {

	 //BaseURI
//	public static String baseURI = "http://localhost:8080/api/v3";
	
	  @Test
	    public void addNewPet() {
	        String requestBody = "{ \"id\": 100, \"name\": \"Nueva Mascota\", \"status\": \"available\" }";

	        given()
	            .body(requestBody)
	            .header("Content-Type", "application/json")
	        .when()
	            .post("/pet")
	        .then()
	            .statusCode(200)
	            .body("name", equalTo("Nueva Mascota"));
	        System.out.println("A new pet was created");
	    }
		

	    public void testGetPetById() {
	        given()
	            .pathParam("petId", 1)
	        .when()
	            .get("/pet/{petId}")
	        .then()
	            .statusCode(200)
	            .body("id", equalTo(1));
	        System.out.println("A new pet was created");
	    }
	

}
